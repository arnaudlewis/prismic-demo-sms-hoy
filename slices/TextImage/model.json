{
  "type": "Slice",
  "fieldset": "Text Image",
  "description": "A simple text and image section with an optional title",
  "icon": "art_track",
  "display": "list",
  "non-repeat": {
    "title": {
      "type": "StructuredText",
      "config": {
        "label": "Title",
        "placeholder": "This is where it all begins... (optional)",
        "single": "heading2"
      }
    },
    "text": {
      "type": "StructuredText",
      "config": {
        "label": "Text",
        "single": "strong, em, hyperlink",
        "allowTargetBlank": true
      }
    },
    "image": {
      "type": "Image",
      "config": {
        "label": "Image",
        "constraint": {
          "width": 600
        },
        "thumbnails": []
      }
    },
    "caption": {
      "type": "Text",
      "config": {
        "label": "Caption",
        "placeholder": "Image caption (optional)"
      }
    },
    "caption_color": {
      "type": "Color",
      "config": {
        "label": "Caption color"
      }
    }
  }
}